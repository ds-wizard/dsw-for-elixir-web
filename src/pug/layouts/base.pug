block config

doctype html
html(lang='en', dir='ltr')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, viewport-fit=cover')

        // Favicon
        link(rel='apple-touch-icon' sizes='180x180' href='/static/icons/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='/static/icons/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='/static/icons/favicon-16x16.png')
        link(rel='manifest' href='/static/icons/site.webmanifest')
        link(rel='mask-icon' href='/static/icons/safari-pinned-tab.svg' color='#f15a24')
        link(rel='shortcut icon' href='/static/icons/favicon.ico')
        meta(name='msapplication-TileColor' content='#da532c')
        meta(name='msapplication-config' content='/static/icons/browserconfig.xml')
        meta(name='theme-color' content='#ffffff')

        // OG and other meta tags
        meta(property='og:site_name', content='DSW Cloud for ELIXIR')
        meta(property='og:title', content=(title || 'DSW Cloud for ELIXIR'))
        if description
            meta(property='og:description', content=description)
            meta(name='description', content=description)

        // Links
        if canonical !== undefined
            link(rel='canonical', href=`https://elixir-ds-wizard.org/${canonical}`)

        // Styles
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap', rel='stylesheet')
        link(href='/style.css', rel='stylesheet')

        // Scripts
        script(async, src='/script.js')
        block scripts

        // Title
        if title
            title #{title} | DSW Cloud for ELIXIR
        else
            title DSW Cloud for ELIXIR

    body(class=bodyClass || '')
        include ../components/header

        div(class='Content')
            block content

        include ../components/footer
